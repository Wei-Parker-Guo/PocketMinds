<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PocketMinds" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_coral</item>
        <item name="colorPrimaryVariant">@color/blue_yonder</item>
        <item name="colorOnPrimary">@color/beau_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_red_crayola</item>
        <item name="colorSecondaryVariant">@color/blue_yonder</item>
        <item name="colorOnSecondary">@color/ghost_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/ghost_white</item>
        <item name="colorError">@color/orange_red_crayola</item>
        <item name="colorOnError">@color/ghost_white</item>

        <!-- Fonts -->
        <item name="fontFamily">@font/oxygen</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>